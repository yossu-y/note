
<%= form_with model:article,local:true do |f| %>
  <div class="form-group">
    <!--<%= f.label :title %>-->
    <%= f.text_field :title, placeholder: "記事タイトル", class: "form-control article_title" %>
  </div>
  <div class="form-group">
    <!--<%= f.label :opinion %>-->
    <%= f.text_area :body, placeholder: "記事内容", class: "form-control article_body", rows: "30" %>
  </div>
  <div class="form-group" align="right">
    <%= f.submit "投稿", class: "btn btn-success" %>
  </div>
<% end %>