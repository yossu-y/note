<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

    <%= render "layouts/errors", obj: @user %>
    <%= form_with model:@user, local:true do |f| %>

      <div class="form-group">
        <%= f.label :名前 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :画像 %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
      </div>

      <div class="form-group">
        <%= f.label :紹介文 %>
        <%= f.text_area :introduction, class: "form-control introduction", rows: "10" %>
      </div>

      <div class="form-group" align="right">
        <%= f.submit "保存", class: "btn btn-success" %>
      </div>

    <% end %>
    </div>
  </div>
</div>